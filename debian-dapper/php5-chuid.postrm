#!/bin/sh -e

for ppkg in cli cgi; do
	if [ -f /etc/php5/$ppkg/php.ini ]; then
		if grep -q "chuid.so" /etc/php5/$ppkg/php.ini; then
			phptemp=`mktemp`
			sed "s!zend_extension = `php-config5 --extension-dir`/chuid.so!!; s/chuid\..*//; s/\[chuid\]//;" < /etc/php5/$ppkg/php.ini > $phptemp
			mv -f $phptemp /etc/php5/$ppkg/php.ini
			rm -f $phptemp
		fi
	fi
done

