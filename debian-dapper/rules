#!/usr/bin/make -f
#export DH_VERBOSE=1

DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

LDFLAGS += -Wl,--as-needed -Wl,-O1

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0 -g3
else
	CFLAGS += -fomit-frame-pointer
endif

build: build-php5-stamp

build-php5-stamp: configure-php5-stamp
	dh_testdir
	cd build-php5 && $(MAKE)
	touch $@

configure: configure-php5-stamp
configure-php5-stamp:
	dh_testdir
	rm -rf build-php5 && mkdir build-php5
	cp -a Makefile.frag config.m4 *.h *.c build-php5/
	cd build-php5 && phpize5 --clean && phpize5
	cd build-php5 && \
	CFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)" \
	./configure \
		--build=$(DEB_BUILD_GNU_TYPE) \
		--host=$(DEB_HOST_GNU_TYPE) \
		--prefix=/usr \
		--enable-chuid=shared \
		--with-cap

	touch $@

clean:
	dh_testdir
	dh_testroot
	-rm -f configure-php5-stamp build-php5-stamp install-stamp
	-rm -rf build-php5
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	cd build-php5 && $(MAKE) INSTALL_ROOT=../debian/php5-chuid install
	touch install-stamp

binary-indep:

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_installdebconf
	dh_install
	dh_installdocs
	dh_installexamples
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	echo "php:Depends=phpapi-`php-config5 --phpapi`" >> debian/php5-chuid.substvars
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install configure

